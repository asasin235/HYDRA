# HYDRA Environment Variables
# Copy this to .env and fill in your values

# OpenRouter API for LLM access
OPENROUTER_API_KEY=

# Slack Bot Configuration (Socket Mode)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Brain storage path (Mac Mini internal storage)
BRAIN_PATH=~/hydra-brain

# External SSD for heavy data (audio, backups, media)
EXTERNAL_SSD_PATH=/Volumes/HydraSSD

# Home Assistant Integration
HOME_ASSISTANT_URL=http://192.168.68.124:8123
HOME_ASSISTANT_TOKEN=

# Dashboard Authentication
DASHBOARD_TOKEN=

# Internal API Key (for inter-service communication)
INTERNAL_API_KEY=

# Backblaze B2 Backup
B2_ACCOUNT_ID=
B2_APP_KEY=
B2_BUCKET=hydra-backup
RCLONE_CRYPT_PASSWORD=
