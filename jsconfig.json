{
    "compilerOptions": {
        "checkJs": true,
        "strict": false,
        "module": "es2022",
        "target": "es2022",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "core/**/*.js",
        "agents/**/*.js",
        "scripts/**/*.js",
        "hydra-screenpipe-sync/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}